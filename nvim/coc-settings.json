{
  "elixir.pathToElixirLS": "~/.local/bin/language_server.sh",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "elixirLS": {
      "command": "~/.local/bin/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
     }
  }
}
